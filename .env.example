# Database (Neon PostgreSQL)
DATABASE_URL="postgresql://user:password@host/database?sslmode=require"

# Better Auth Configuration
# Local development URL
BETTER_AUTH_URL="http://localhost:3000"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Better Auth Secret (REQUIRED)
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET="your-secret-here-generate-with-openssl"

# Email System
# Provider: "mock" (development) or "resend" (production)
EMAIL_PROVIDER="mock"

# Resend Configuration (required for production emails)
# RESEND_API_KEY="re_xxxxx"

# Email Addresses
EMAIL_FROM="noreply@yourdomain.com"
EMAIL_REPLY_TO="support@yourdomain.com"
ADMIN_EMAIL="admin@yourdomain.com"

# Note: In mock mode, emails are logged to console instead of being sent

# OAuth Providers (optional)
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""
